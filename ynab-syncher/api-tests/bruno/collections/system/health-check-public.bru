meta {
  name: Health Check - Public
  type: http
  seq: 1
}

get {
  url: {{baseUrl}}/actuator/health
  body: none
  auth: none
}

assert {
  res.status: eq 200
  res.body.status: eq "UP"
}

tests {
  test("Should return healthy status without authentication", function() {
    expect(res.status).to.equal(200);
    expect(res.body.status).to.equal('UP');
  });
  
  test("Should include basic health information", function() {
    expect(res.body).to.have.property('status');
  });
}