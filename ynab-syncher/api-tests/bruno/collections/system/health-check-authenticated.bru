meta {
  name: Health Check - Authenticated Details
  type: http
  seq: 2
}

get {
  url: {{baseUrl}}/actuator/health
  body: none
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

assert {
  res.status: eq 200
  res.body.status: eq "UP"
}

tests {
  test("Should return detailed health status with authentication", function() {
    expect(res.status).to.equal(200);
    expect(res.body.status).to.equal('UP');
  });
  
  test("Should include detailed health components", function() {
    expect(res.body).to.have.property('status');
    // Additional components may be included with authentication
  });
}